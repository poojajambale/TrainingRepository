
public class VaragsAdvanedLoop {

	public void add(int...num) {
		System.out.println("(To find Length of numbers)Length =  "+num.length);
		
		int sum = 0;
		
		for(int x : num) {
			sum = sum + x;
		}
		System.out.println(sum);
	}
	
	public static void main(String[] args) {
		VaragsAdvanedLoop ans = new VaragsAdvanedLoop();
		ans.add(2,8,9,6);	
	}

}
